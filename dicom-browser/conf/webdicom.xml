<webdicom version="1">

	<!-- Параметры dicom-архива -->
	<dicom-connection aet="MAIN" host="localhost" port="11112" />

	<!-- Папка для входящих исследований (dcm-файлов) -->
	<study-incoming-folder>data/incoming</study-incoming-folder>

